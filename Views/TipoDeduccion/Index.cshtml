@model IEnumerable<NominaAPEC.Models.TipoDeduccion>

@{
    ViewData["Title"] = "Tipos de Deducción";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.DependeDeSalario)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>
                    @if (item.DependeDeSalario)
                    {
                        <span class="badge badge-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">No</span>
                    }
                </td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge badge-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

