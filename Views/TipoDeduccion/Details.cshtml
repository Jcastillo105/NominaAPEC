@model NominaAPEC.Models.TipoDeduccion

@{
    ViewData["Title"] = "Detalles del Tipo de Deducción";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Información del Tipo de Deducción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model?.Nombre
        </dd>

        <dt class="col-sm-2">
            Depende de Salario
        </dt>
        <dd class="col-sm-10">
            @(Model?.DependeDeSalario == true ? "Sí" : "No")
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @(Model?.Estado == true ? "Activo" : "Inactivo")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
