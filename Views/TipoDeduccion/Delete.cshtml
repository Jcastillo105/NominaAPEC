@model NominaAPEC.Models.TipoDeduccion

@{
    ViewData["Title"] = "Eliminar Tipo de Deducción";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Está seguro de que desea eliminar este registro?</h3>
<div>
    <h4>Detalles del Tipo de Deducción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DependeDeSalario)
        </dt>
        <dd class="col-sm-10">
            @(Model?.DependeDeSalario == true ? "Sí" : "No")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @(Model?.Estado == true ? "Activo" : "Inactivo")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </form>
</div>
