@model NominaAPEC.Models.RegistroTransaccion

@{
    ViewData["Title"] = "Detalles del Registro de Transacción";
}

<h1>Detalles del Registro de Transacción</h1>

<div>
    <h4>Registro de Transacción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Empleado</dt>
        <dd class="col-sm-10">
            @Model.Empleado?.Nombre
        </dd>

        <dt class="col-sm-2">Tipo de Ingreso</dt>
        <dd class="col-sm-10">
            @if (Model.TipoIngreso != null)
            {
                @Model.TipoIngreso.Nombre
            }
            else
            {
                <span>No aplica</span>
            }
        </dd>

        <dt class="col-sm-2">Tipo de Deducción</dt>
        <dd class="col-sm-10">
            @if (Model.TipoDeduccion != null)
            {
                @Model.TipoDeduccion.Nombre
            }
            else
            {
                <span>No aplica</span>
            }
        </dd>

        <dt class="col-sm-2">Tipo de Transacción</dt>
        <dd class="col-sm-10">
            @Model.TipoTransaccion
        </dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">
            @Model.Fecha.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">
            @Model.Monto
        </dd>

        <dt class="col-sm-2">ID de Asiento</dt>
        <dd class="col-sm-10">
            @Model.IdAsiento
        </dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">
            @Model.Estado
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
