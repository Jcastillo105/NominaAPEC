@model NominaAPEC.Models.RegistroTransaccion

@{
    ViewData["Title"] = "Eliminar Registro de Transacción";
}

<h1>Eliminar Registro de Transacción</h1>

<h3>¿Está seguro de que desea eliminar este registro?</h3>
<div>
    <h4>Registro de Transacción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Empleado</dt>
        <dd class="col-sm-10">
            @Model.Empleado?.Nombre
        </dd>

        <dt class="col-sm-2">Tipo de Ingreso</dt>
        <dd class="col-sm-10">
            @if (Model.TipoIngreso != null)
            {
                @Model.TipoIngreso.Nombre
            }
            else
            {
                <span>No aplica</span>
            }
        </dd>

        <dt class="col-sm-2">Tipo de Deducción</dt>
        <dd class="col-sm-10">
            @if (Model.TipoDeduccion != null)
            {
                @Model.TipoDeduccion.Nombre
            }
            else
            {
                <span>No aplica</span>
            }
        </dd>

        <dt class="col-sm-2">Tipo de Transacción</dt>
        <dd class="col-sm-10">
            @Model.TipoTransaccion
        </dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">
            @Model.Fecha.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">
            @Model.Monto
        </dd>

        <dt class="col-sm-2">ID de Asiento</dt>
        <dd class="col-sm-10">
            @Model.IdAsiento
        </dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">
            @Model.Estado
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>
