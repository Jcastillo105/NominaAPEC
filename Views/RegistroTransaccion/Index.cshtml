@model IEnumerable<NominaAPEC.Models.RegistroTransaccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Transacciones Registradas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>Tipo de Ingreso</th>
            <th>Tipo de Deducción</th>
            <th>Tipo de Transacción</th>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Empleado -->
                <td>
                    @if (item.Empleado != null)
                    {
                        @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                    }
                    else
                    {
                        <span>No especificado</span>
                    }
                </td>

                <!-- Tipo de Ingreso -->
                <td>
                    @if (item.TipoIngreso != null)
                    {
                        @Html.DisplayFor(modelItem => item.TipoIngreso.Nombre)
                    }
                    else
                    {
                        <span>No aplica</span>
                    }
                </td>

                <!-- Tipo de Deducción -->
                <td>
                    @if (item.TipoDeduccion != null)
                    {
                        @Html.DisplayFor(modelItem => item.TipoDeduccion.Nombre)
                    }
                    else
                    {
                        <span>No aplica</span>
                    }
                </td>

                <!-- Tipo de Transacción -->
                <td>@Html.DisplayFor(modelItem => item.TipoTransaccion)</td>

                <!-- Fecha -->
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>

                <!-- Monto -->
                <td>@Html.DisplayFor(modelItem => item.Monto)</td>

                <!-- Estado -->
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>

                <!-- Acciones -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
