@model NominaAPEC.Models.TipoIngreso

@{
    ViewData["Title"] = "Eliminar Tipo de Ingreso";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Está seguro de que desea eliminar este tipo de ingreso?</h3>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Detalles del Tipo de Ingreso</h5>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DependeDeSalario)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DependeDeSalario)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Estado)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>
