@model NominaAPEC.Models.AsientoContable

@{
    ViewData["Title"] = "Editar Asiento Contable";
}

<h1>@ViewData["Title"]</h1>

<h4>Asiento Contable</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Descripción -->
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- ID Auxiliar -->
            <div class="form-group">
                <label asp-for="IdAuxiliar" class="control-label">ID Auxiliar</label>
                <input asp-for="IdAuxiliar" class="form-control" />
                <span asp-validation-for="IdAuxiliar" class="text-danger"></span>
            </div>

            <!-- Cuenta DB -->
            <div class="form-group">
                <label asp-for="CuentaDB" class="control-label">Cuenta DB</label>
                <input asp-for="CuentaDB" class="form-control" />
                <span asp-validation-for="CuentaDB" class="text-danger"></span>
            </div>

            <!-- Cuenta CR -->
            <div class="form-group">
                <label asp-for="CuentaCR" class="control-label">Cuenta CR</label>
                <input asp-for="CuentaCR" class="form-control" />
                <span asp-validation-for="CuentaCR" class="text-danger"></span>
            </div>

            <!-- Fecha del Asiento -->
            <div class="form-group">
                <label asp-for="FechaAsiento" class="control-label">Fecha del Asiento</label>
                <input asp-for="FechaAsiento" type="date" class="form-control" />
                <span asp-validation-for="FechaAsiento" class="text-danger"></span>
            </div>

            <!-- Monto -->
            <div class="form-group">
                <label asp-for="Monto" class="control-label">Monto del Asiento</label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Estado" />
                <label class="form-check-label" asp-for="Estado">Activo</label>
            </div>

            <!-- Botón de Guardar -->
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
