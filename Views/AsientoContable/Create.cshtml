@model NominaAPEC.Models.AsientoContable

@{
    ViewData["Title"] = "Crear Asiento Contable";
}

<h1>Crear Asiento Contable</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Descripción -->
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- ID Auxiliar -->
            <div class="form-group">
                <label asp-for="IdAuxiliar" class="control-label"></label>
                <input asp-for="IdAuxiliar" class="form-control" />
                <span asp-validation-for="IdAuxiliar" class="text-danger"></span>
            </div>

            <!-- Cuenta DB -->
            <div class="form-group">
                <label asp-for="CuentaDB" class="control-label"></label>
                <input asp-for="CuentaDB" class="form-control" />
                <span asp-validation-for="CuentaDB" class="text-danger"></span>
            </div>

            <!-- Cuenta CR -->
            <div class="form-group">
                <label asp-for="CuentaCR" class="control-label"></label>
                <input asp-for="CuentaCR" class="form-control" />
                <span asp-validation-for="CuentaCR" class="text-danger"></span>
            </div>

            <!-- Fecha del Asiento -->
            <div class="form-group">
                <label asp-for="FechaAsiento" class="control-label"></label>
                <input asp-for="FechaAsiento" type="date" class="form-control" />
                <span asp-validation-for="FechaAsiento" class="text-danger"></span>
            </div>

            <!-- Monto -->
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-group form-check">
                <input asp-for="Estado" class="form-check-input" />
                <label asp-for="Estado" class="form-check-label"></label>
            </div>

            <!-- Empleado ID -->
            <div class="form-group">
                <label asp-for="EmpleadoId" class="control-label">Empleado</label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId">
                    <option value="">Seleccione un empleado</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>

            <!-- Tipo de Transacción -->
            <div class="form-group">
                <label asp-for="TipoTransaccion" class="control-label">Tipo de Transacción</label>
                <select asp-for="TipoTransaccion" class="form-control">
                    <option value="">Seleccione el tipo de transacción</option>
                    <option value="Ingreso">Ingreso</option>
                    <option value="Deducción">Deducción</option>
                </select>
                <span asp-validation-for="TipoTransaccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
