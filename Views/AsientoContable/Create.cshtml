@model NominaAPEC.Models.AsientoContable

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Asiento Contable</h1>

<h4>Asiento Contable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmpleadoId" class="control-label">Empleado</label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId">
                    <option value="">Seleccione un empleado</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cuenta" class="control-label"></label>
                <input asp-for="Cuenta" class="form-control" />
                <span asp-validation-for="Cuenta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoMovimiento" class="control-label"></label>
                <input asp-for="TipoMovimiento" class="form-control" />
                <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaAsiento" class="control-label"></label>
                <input asp-for="FechaAsiento" type="date" class="form-control" />
                <span asp-validation-for="FechaAsiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoAsiento" class="control-label"></label>
                <input asp-for="MontoAsiento" class="form-control" />
                <span asp-validation-for="MontoAsiento" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Estado" />
                <label class="form-check-label" asp-for="Estado"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
