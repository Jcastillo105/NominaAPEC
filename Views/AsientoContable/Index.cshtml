@model IEnumerable<NominaAPEC.Models.AsientoContable>

@{
    ViewData["Title"] = "Asientos Contables";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Asiento</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Empleado.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Cuenta)</th>
            <th>@Html.DisplayNameFor(model => model.TipoMovimiento)</th>
            <th>@Html.DisplayNameFor(model => model.FechaAsiento)</th>
            <th>@Html.DisplayNameFor(model => model.MontoAsiento)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Empleado.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Cuenta)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoMovimiento)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaAsiento)</td>
                <td>@Html.DisplayFor(modelItem => item.MontoAsiento)</td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge badge-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
