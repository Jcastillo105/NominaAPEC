@model IEnumerable<NominaAPEC.Models.AsientoContable>

@{
    ViewData["Title"] = "Asientos Contables";
}

<!-- Bloque para mostrar mensajes de éxito -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Asiento</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.First().IdAuxiliar)</th>
            <th>@Html.DisplayNameFor(model => model.First().CuentaDB)</th>
            <th>@Html.DisplayNameFor(model => model.First().CuentaCR)</th>
            <th>@Html.DisplayNameFor(model => model.First().FechaAsiento)</th>
            <th>@Html.DisplayNameFor(model => model.First().Monto)</th>
            <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.IdAuxiliar)</td>
                <td>@Html.DisplayFor(modelItem => item.CuentaDB)</td>
                <td>@Html.DisplayFor(modelItem => item.CuentaCR)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaAsiento.ToString("yyyy-MM-dd HH:mm"))</td>
                <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                <td>
                    @if (item.Estado)
                    {
                        <span class="badge badge-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
